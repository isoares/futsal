extends layout

block page
	- var menu = 'index'

block content
	div(ng-controller="indexCont")
		div.jumbotron
			div.container-fluid
				h2 Team Stats
		div.container-fluid
			div.row
				div.col-xs-12
					table.table.table-hover
						thead
							tr
								th.col-xs-3 Team
								th.col-xs-2 Games
								th.col-xs-1 Wins
								th.col-xs-1 Draws
								th.col-xs-1 Losses
								th.col-xs-1 Goals Pro
								th.col-xs-1 Goals Con
								th.col-xs-1 Goals Diff
								th.col-xs-1 %
						tbody
							tr(ng-repeat="s in rSumulaList")
								td {{s._id}}
								td {{s.games}}
								td {{s.wins}}
								td {{s.draws}}
								td {{s.losses}}
								td {{s.goalsPro}}
								td {{s.goalsCon}}
								td {{s.goalsDif}}
								td {{(((s.wins * 3) + s.draws) / (s.games * 3)) * 100 | number:2}} %