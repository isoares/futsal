extends ../layout

block page

block content
	div(ng-controller="userCont")
		div.jumbotron
			div.container-fluid
				h2 Users
		div.container-fluid
			div.row
				div.col-xs-4
				div.col-xs-4
					form(role='form' ng-submit="registerUser(#{firstUser})" style='max-width: 300px;')
						.form-group
							label(for="userName") Name:
							input.form-control(type='text' ng-model="formData.name" id="userName" placeholder='Name' required autofocus)
						.form-group
							label(for="userUsername") Username:
							input.form-control(type='text' ng-model="formData.username" id="userUsername" placeholder='Username' required)
						.form-group
							label(for="userPassword") Password:
							input.form-control(type='password' ng-model="formData.password" id="userPassword" placeholder='Password' required)
						.form-group
							label
								input(type="checkbox" ng-model="formData.admin" ng-init="formData.admin=#{firstUser}" ng-disabled="#{firstUser}")
								|  Admin
						button.btn.btn-default(type='submit') Submit
						&nbsp;
						a(href='/users')
							button.btn.btn-primary(type="button") Cancel
				div.col-xs-4