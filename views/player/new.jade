extends ../layout

block page

block content
	div(ng-controller="playerCont")
		div.jumbotron
			div.container-fluid
				h2 Player
		div.container-fluid
			div.row(ng-init="findPlayer('#{_id}')")
				div.col-xs-4
				div.col-xs-4
					form(role="form", ng-submit="createPlayer()" style="max-width: 300px;" enctype="multipart/form-data")
						.form-group.text-center
							img(src="/players/getPlayerPhoto/{{player._id}}" ng-show="!photo_src" width="100%")
							img(ng-src="{{photo_src}}" ng-show="photo_src" width="256px")
						.form-group
							label(for="playerPhoto") Photo:
							input.form-control(type="file" id="playerPhoto" onchange="angular.element(this).scope().photoChanged(this)")
						.form-group
							label(for="playerName") Name:
							input.form-control(type="text" ng-model="player.name" id="playerName" placeholder="Name" required autofocus)
						button.btn.btn-default(type="submit") Submit
						&nbsp;
						a(href="/players").button.btn.btn-primary Cancel
				div.col-xs-4