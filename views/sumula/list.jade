extends ../layout

block page
	- var menu = 'sumulas'

block content
	div(ng-controller="sumulaCont")
		h1 Sumula
		div.row
			div.col-xs-5
				a(href="/newSumula").btn.btn-default
					span.glyphicon.glyphicon-plus
					|  New
			div.col-xs-7
				input.form-control(type="text" ng-model="query" placeholder="Search for a sumula")
		div.row
			div.col-xs-12
				hr
		div.row
			div.col-xs-12
				table.table.table-hover
					thead
						tr
							th.col-xs-1 Detail
							th.col-xs-2 Data
							th.col-xs-1 Quadro
							th.col-xs-4 Adversario
							th.col-xs-4 Resultado
					tbody
						tr(ng-repeat="sumula in sumulaList | filter:query")
							//td
								//a(href="#/sumula/{{sumula._id}}") {{$index + 1}}
							td
								button.btn.btn-link(type="button" ng-click="viewSumula(sumula._id)")
									span.glyphicon.glyphicon-search
							td {{sumula.data}}
							td {{sumula.quadro}}
							td {{sumula.adversario}}
							td BSF {{sumula.goalsPro}} x {{sumula.goalsCon}} {{sumula.adversario}}